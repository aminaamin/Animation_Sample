<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">
    <ImageView android:id="@+id/imageRotate"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:src="@mipmap/bounce"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"/>
    <Button
        android:id="@+id/btnRClk"
        android:layout_below="@+id/imageRotate"
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:text="Clockwise"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="10dp"/>
    <Button
        android:id="@+id/btnRAClk"
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:layout_alignBottom="@+id/btnRClk"
        android:text="Anti Clockwise"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"/>
</RelativeLayout>